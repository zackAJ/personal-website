---
import "@styles/global.css"
import BaseHead from "@components/BaseHead.astro"
import Header from "@components/Header.astro"
import Footer from "@components/Footer.astro"
import Drawer from "@components/Drawer.astro"
const { title, description } = Astro.props
import { SITE } from "@consts"
import Background from "@components/Background.astro"

let pathname = Astro.url.pathname.substring(1)
let dif = pathname.substring(0,pathname.indexOf('/'))
let isBlogPost =  dif === 'blog'
let thumbnail = '/images/thumbnails/'+pathname.replace('blog/','')+'.png' 
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`${title} | ${SITE.TITLE}`} description={description} image={isBlogPost ? thumbnail : undefined} />
  </head>
  <body>
    <Header />
    <Drawer />
    <main>
      <Background />
      <slot />
    </main>
    <Footer />
  </body>
</html>
